<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.GoodBadHabits" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryLightColor_700</item>
        <item name="colorPrimaryVariant">@color/primaryColor_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryLightColor_500</item>
        <item name="colorSecondaryVariant">@color/secondaryColor_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:forceDarkAllowed">false</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.HabitApp.LargeComponent</item>
        <!-- Navigation button color -->
        <item name="drawerArrowStyle">@style/Arrow</item>

        <item name="splash_color">@color/black</item>
        <item name="android:windowSplashscreenContent">@drawable/back_splash</item>
    </style>
</resources>